{
	"name": "preact-jsx-i18n",
	"version": "1.0.0",
	"description": "Localization for Preact using JSX components",
	"source": "src/index.ts",
	"main": "dist/preact-jsx-i18n.js",
	"module": "dist/preact-jsx-i18n.esm.js",
	"unpkg": "dist/preact-jsx-i18n.umd.js",
	"scripts": {
		"test": "karmatic",
		"build": "microbundle",
		"prepublishOnly": "npm run build -s"
	},
	"keywords": [
		"jsx",
		"intl",
		"i18n",
		"internationalization",
		"localization",
		"preact",
		"translate",
		"translation"
	],
	"repository": "apyos/preact-jsx-i18n",
	"homepage": "https://github.com/apyos/preact-jsx-i18n",
	"authors": [
		"Philippe Schommers <philippe@schommers.be>"
	],
	"license": "MIT",
	"files": [
		"dist"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,json,css,md}": [
			"prettier --write",
			"git add"
		]
	},
	"devDependencies": {
		"@tsconfig/node16": "^1.0.2",
		"@types/dlv": "^1.1.2",
		"husky": "^7.0.4",
		"karmatic": "^2.1.0",
		"lint-staged": "^12.3.7",
		"microbundle": "^0.14.2",
		"prettier": "^2.6.1",
		"webpack": "^4.46.0"
	},
	"dependencies": {
		"dlv": "^1.1.3",
		"preact": "^10.6.6"
	},
	"peerDependencies": {
		"preact": ">=10"
	}
}
